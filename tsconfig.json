{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "react": ["react/"],
      "react-component/": ["react-component/"],
      "react-component/*": ["react-component/*"],
      "@/src": ["src/"],
      "@/src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "react/**/*", "main.tsx", "react-component/**/*"],
  "exclude": ["node_modules"]
}
